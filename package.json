{
	"name": "cite",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"engines": {
		"node": ">=22.12.0"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "pnpm generate:icons && vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"generate:icons": "node scripts/generate-favicons.js",
		"cli": "tsx cli/index.ts",
		"cli:minimal": "tsx cli/index.ts --no-process --no-thinking",
		"cli:full": "tsx cli/index.ts"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-netlify": "^5.2.4",
		"@sveltejs/kit": "^2.47.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.14",
		"@types/marked": "^6.0.0",
		"@types/node": "^22.0.0",
		"favicons": "^7.2.0",
		"svelte": "^5.41.0",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^4.1.14",
		"tsx": "^4.19.0",
		"typescript": "^5.9.3",
		"vite": "^7.1.10"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild",
			"@tailwindcss/oxide"
		]
	},
	"dependencies": {
		"@supabase/ssr": "^0.7.0",
		"@supabase/supabase-js": "^2.81.1",
		"marked": "^17.0.0",
		"sveltekit-rate-limiter": "^0.7.0"
	}
}